<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_background"
    android:orientation="vertical" >
    <include layout="@layout/title_bar"/>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_marginTop="@dimen/space_30"
	    android:padding="@dimen/space_8"
	    android:gravity="center"
	    android:layout_gravity="center"
	    >
	    <EditText
	       android:textSize="@dimen/text_size_22" 
          android:textColor="@color/black" 
          android:textColorHint="@color/gray" 
          android:id="@+id/account"
          android:layout_width="fill_parent" 
          android:layout_height="@dimen/space_46" 
          android:focusable="false"
          android:background="@null"
          android:inputType="text"/>
	    
	    <com.e1858.widget.ClearEditText 
          android:textSize="@dimen/text_size_20" 
          android:textColor="@color/black" 
          android:textColorHint="@color/gray" 
          android:id="@+id/email"
          android:layout_width="fill_parent" 
          android:layout_height="@dimen/space_46" 
          android:padding="@dimen/space_8"
          android:hint="@string/email_str" 
          android:background="@drawable/bg_shadow"
          android:drawableRight="@drawable/selector_bg_delete"
          android:inputType="text"/>
	    <Button
	        android:textSize="@dimen/text_size_22" 
            android:textColor="@color/white" 
            android:gravity="center" 
            android:id="@+id/btn_resetpass" 
            android:background="@drawable/selector_bg_yellow" 
            android:layout_width="fill_parent" 
            android:layout_height="@dimen/space_46" 
            android:layout_marginTop="@dimen/space_5"
            android:text="@string/reset_pass" />
	</LinearLayout>
</LinearLayout>