<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="loading_small" parent="@android:style/Widget.ProgressBar.Small">
		<item name="android:indeterminateDrawable">@anim/loading</item>
		<item name="android:layout_width">@dimen/space_21</item> 
		<item name="android:layout_height">@dimen/space_21</item>
		<item name="android:layout_gravity">center_vertical</item>
	</style>
  
    <style name="AppTheme_Default" parent="@android:style/Theme.Light">
        <item name="themebackground">@color/blue</item>
    </style>
    
    <style name="AppTheme_Red" parent="AppTheme_Default">
        <item name="themebackground">@color/red</item>       
    </style>
    <style name="AppTheme_yello" parent="AppTheme_Default">
        <item name="themebackground">@color/yellow</item>
    </style>
    
    <style name="style_horizontal_layout" parent="@android:style/Animation">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/space_12</item>
        <item name="android:paddingRight">@dimen/space_10</item>
        <item name="android:minHeight">@dimen/space_42</item>
    </style>
    
       <style name="button_2_style">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_bg_yellow</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
    </style>
    <style name="button_1_style">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff666666</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_bg_blue</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
    </style>
    
    <style name="checke_box_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox</item>
		<item name="android:paddingLeft">25.0dip</item>
		<item name="android:maxHeight">10.0dip</item>
   </style>
   
    <style name="loading_Large" parent="@android:style/Widget.ProgressBar.Large">
		<item name="android:indeterminateDrawable">@anim/loading</item>
	</style>
    
    <style name="widget_listview">
        <item name="android:layout_width">fill_parent</item>
   		<item name="android:layout_height">fill_parent</item>
       	<item name="android:layout_weight">1</item>      	
       	<item name="android:divider">@drawable/content_item</item>
       	<item name="android:dividerHeight">2.0dip</item>
       	<item name="android:fadingEdge">none</item>
       	<item name="android:scrollingCache">false</item>
       	<item name="android:scrollbars">none</item>
    </style>
    
</resources>
